<div class="item-info" id="favorite-btn<%= post.id %>">
  <% if user_signed_in? && post.bookmarked_by?(current_user) %>
    <% bookmark = current_user.bookmarks.find_by(post_id: post.id) %>
    <%= link_to "いいね済", post_bookmark_path(post, bookmark), method: :delete, data: { turbo_method: :delete }, class: "post_bookmarks" %>
  <% else %>
    <%= link_to "いいねする", post_bookmarks_path(post), method: :post, data: { turbo_method: :post }, class: "post_bookmarks" %>
  <% end %>
</div>